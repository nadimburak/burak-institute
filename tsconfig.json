{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true, // ✅ Added: ensures consistent file naming
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "baseUrl": ".", // ✅ Added: required for paths to work properly
    "allowSyntheticDefaultImports": true // ✅ Added: better ES module compatibility
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/**/*" // ✅ More explicit inclusion
  ],
  "exclude": [
    "node_modules",
    "rest-client",
    "public",
    "temp",
    ".vscode",
    ".next",
    "dist",
    "out",
    "*.js" // ✅ Exclude JavaScript files if you're migrating to TypeScript
  ]
}